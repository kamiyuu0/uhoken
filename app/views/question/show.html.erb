<section class="max-w-4xl mt-20 p-6 mx-auto bg-white rounded-md shadow-md">
    <h2 class="text-lg font-semibold text-gray-700 capitalize">第<%= @id %>問</h2>
    <p  class="mt-8 text-sm text-black-500 sm:text-xl/8">
        <%= @questions.dig('q') %>
    </p>
    <%= form_with url: question_path(@id), method: :patch do |f| %>
        <div class="mt-4">
                <div class="mt-10 space-y-6">
                    <div class="flex items-center gap-x-3">
                        <%= f.radio_button :choice, :"1", class:"relative size-4 appearance-none rounded-full border border-gray-300 bg-white before:absolute before:inset-1 before:rounded-full before:bg-white not-checked:before:hidden checked:border-indigo-600 checked:bg-indigo-600 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 disabled:border-gray-300 disabled:bg-gray-100 disabled:before:bg-gray-400 forced-colors:appearance-auto forced-colors:before:hidden" %>
                        <%= f.label :choice_1, @questions.dig('choices').dig(1), class:"block text-lg font-medium text-gray-900" %>
                    </div>
                    <div class="flex items-center gap-x-3">
                        <%= f.radio_button :choice, :"2", class:"relative size-4 appearance-none rounded-full border border-gray-300 bg-white before:absolute before:inset-1 before:rounded-full before:bg-white not-checked:before:hidden checked:border-indigo-600 checked:bg-indigo-600 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 disabled:border-gray-300 disabled:bg-gray-100 disabled:before:bg-gray-400 forced-colors:appearance-auto forced-colors:before:hidden" %>
                        <%= f.label :choice_2, @questions.dig('choices').dig(2), class:"block text-lg font-medium text-gray-900" %>
                    </div>
                    <div class="flex items-center gap-x-3">
                        <%= f.radio_button :choice, :"3", class:"relative size-4 appearance-none rounded-full border border-gray-300 bg-white before:absolute before:inset-1 before:rounded-full before:bg-white not-checked:before:hidden checked:border-indigo-600 checked:bg-indigo-600 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 disabled:border-gray-300 disabled:bg-gray-100 disabled:before:bg-gray-400 forced-colors:appearance-auto forced-colors:before:hidden" %>
                        <%= f.label :choice_3, @questions.dig('choices').dig(3), class:"block text-lg font-medium text-gray-900" %>
                    </div>
                    <div class="flex items-center gap-x-3">
                        <%= f.radio_button :choice, :"4", class:"relative size-4 appearance-none rounded-full border border-gray-300 bg-white before:absolute before:inset-1 before:rounded-full before:bg-white not-checked:before:hidden checked:border-indigo-600 checked:bg-indigo-600 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 disabled:border-gray-300 disabled:bg-gray-100 disabled:before:bg-gray-400 forced-colors:appearance-auto forced-colors:before:hidden" %>
                        <%= f.label :choice_4, @questions.dig('choices').dig(4), class:"block text-lg font-medium text-gray-900" %>
                    </div>
            </div>
        </div>
        <div class="mt-10 flex items-center justify-center gap-x-6">
            <%= f.submit "ウホッと叫んで次へ", class: "px-4 py-2 font-medium tracking-wide text-white capitalize transition-colors duration-300 transform bg-yellow-900 rounded-lg hover:bg-yellow-600 focus:outline-none" %>
        </div>
    <% end %>
</section>